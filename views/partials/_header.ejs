<header>
 <nav class="navbar navbar-expand-md navbar-dark bg-success">
   <a class="navbar-brand" href="/urls">TinyApp</a>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
     <span class="navbar-toggler-icon"></span>
   </button>
   <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
     <div class="navbar-nav" style="width: 100%; display: flex; justify-content: space-between; align-items: center;">
      <div style="display: flex">
       <a class="nav-item nav-link" href="/urls">My URLs</a>
       <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

       <% if (user_id) { %>
        <form method="POST" action="/logout">
         <span>Logged in as <%= user_id.email %></span>
         <button class="btn border border-dark" type="submit">Logout</button>
        </form>
       <% } else { %>
        <form method="GET" action="/register" style="  
        display: flex; justify-content: center;"> 
         <button class="btn border border-dark" type="submit">Register</button> 
        </form>
       <form method="GET" action="/login" style="  
        width: 70%; display: flex; justify-content: end;"> 
         <button class="btn border border-dark" type="submit">Login</button> 
        </form>
        <% } %>
       </div>
   </div>
 </nav>
</header>